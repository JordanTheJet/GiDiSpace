# GiDiSpace Environment Variables
# Copy this to .env and fill in your values

# ============================================
# SUPABASE (Required)
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Public URL - used by frontend
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Anon key - used by frontend (safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbG...your-anon-key

# Service role key - used by Python backend (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbG...your-service-role-key

# Also set for Python backend (same values, different names)
SUPABASE_URL=https://your-project-id.supabase.co

# ============================================
# PYTHON BACKEND
# ============================================
# URL where the FastAPI backend runs
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
BACKEND_URL=http://localhost:8000

# Frontend URL for CORS (used by Python backend)
FRONTEND_URL=http://localhost:3000

# ============================================
# AI/LLM (for GiDi conversations)
# ============================================
# Anthropic Claude - for GiDi chat
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI - optional, for enhanced embeddings
OPENAI_API_KEY=sk-...

# Default LLM settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o-mini

# ============================================
# VOICE (Optional)
# ============================================
# ElevenLabs - for voice synthesis
ELEVENLABS_API_KEY=...

# ============================================
# OTHER
# ============================================
# JWT Secret (for custom auth if needed)
JWT_SECRET=generate-with-openssl-rand-base64-32
